napp:
  dirs:
    apps: <%= dir_apps %>
    log: <%= dir_log(:abs) %>
    nginx: nginx.d
    app:
      app: app
      cfg: cfg
      log: log
      run: run
  user: napp
  users: []
  log_w_sudo: true
defaults:
  app:
    vcs: git
    branch: master
  types:
    daemon:
      logdir: log
      public: public
  daemon:
    wait: 7
  nginx:
    validate_server_name: true
    max_body_size:
    proxy_buffering:
    ssl: false
commands:
  aliases:
    UBERJAR:      lein uberjar
    JAR:          java -jar project.jar ${PORT}
    BUNDLE:       &bundle   bundle install
    MIGRATE:      &migrate  SHELL RAILS_ENV=production
                              bundle exec rake db:migrate
    ASSETS:       &assets   SHELL RAILS_ENV=production
                              bundle exec rake assets:precompile
    RAILS_UPD:    [*bundle, *migrate, *assets]
    RACKUP:       SIGINT bundle exec rackup -E production -p ${PORT}
    PUMA_SOCK:    bundle exec puma -e production -b unix://${SOCKET}
    CUSTOM_BOOT:  ./_scripts/bootstrap
    CUSTOM_UPD:   ./_scripts/update
  mongo:
  postgres:
