# Copyright   : Copyright (C) 2012  Felix C. Stegerman
# Licence     : GPLv2
#
# --                                                            # }}}1

vsn='0.0.0'

usage='nap ...'                                                 # TODO

function die () { echo "${2:-error}: $1" >&2; exit 1; }

function fail () {
  local x
  for x in "$@"; do echo "error: $x" >&2; done
  die "$usage" usage
}

# --

rc="${NAPRC:-/etc/naprc}"
source "$rc" || die 'failed to load naprc'

# --

function findlib () {                                           # {{{1
  local l="$1" x
  for x in "${NAP_LIBS[@]}"; do
    if [ -e "$x/$l" ]; then echo "$x/$l"; return 0; fi
  done
  return 1
}                                                               # }}}1

# --

if [ "$#" -eq 0 -o "$1" == help ]; then
  echo "nap version $vsn"$'\n\n'"usage: $usage"; exit 0
fi

cmd="$1"; shift

if [[ "$cmd" =~ ^(new)$ ]]; then
  lib="$( findlib "cmd.$cmd" )" \
    || die "failed to load lib for command \`$cmd'"
  source "$lib"
  run "$@"
else
  fail "unknown command \`$cmd'"
fi

# --

# vim: set tw=70 sw=2 sts=2 et fdm=marker :
