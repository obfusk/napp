#!/bin/bash

# --                                                            # {{{1
#
# File        : nap
# Maintainer  : Felix C. Stegerman <flx@obfusk.net>
# Date        : 2012-08-07
#
# Copyright   : Copyright (C) 2012  Felix C. Stegerman
# Licence     : GPLv2
#
# --                                                            # }}}1

  vsn='0.0.0'
usage='nap ...'

# --

# Usage: die <msg> [<label>]
# Exits.
function die () { echo "${2:-error}: $1" >&2; exit 1; }

# Usage: fail <error(s)>
# Exits.
function fail () {
  local x
  for x in "$@"; do echo "error: $x" >&2; done
  die "$usage" usage
}

# --

rc="${NAPRC:-/etc/naprc}"
source "$rc" || die 'failed to load naprc'

# --

# Usage: searchlibs <rx>
# Outputs paths.
function searchlibs () {                                        # {{{1
  local rx="$1" x y
  for x in "${NAP_LIBS[@]}"; do
    for y in "$x"/*.bash; do
      [[ "$( basename "$y" )" =~ ^($rx).bash$ ]] && echo "$y"
    done
  done
}                                                               # }}}1

# Usage: findlib <name>
# Outputs path; returns 0 on success, 1 on failure.
function findlib () {                                           # {{{1
  local l="$1" x y
  for x in "${NAP_LIBS[@]}"; do
    y="$x/$l.bash"; [ -e "$y" ] && { echo "$y"; return 0; }
  done
  return 1
}                                                               # }}}1

# Usage: loadlib <name>
# Sources file; exits on failure.
function loadlib () {
  local lib="$1" f
  f="$( findlib "$lib" )" || die "failed to find lib for \`$lib'"
  source "$f"             || die "failed to load lib for \`$lib'"
}

# --

loadlib nap
usage="nap { $( nap_cmds ' | ' ) } [ <arg(s)> ]"

# --

if [ "$1" == help ]; then help=y; shift; else help=n; fi

if [ "$#" -eq 0 ]; then
  echo "nap version $vsn"$'\n\n'"usage: $usage"; exit 0
fi

nap_cmd="$1"; shift

if [[ "$nap_cmd" =~ ^($( nap_cmds '|' ))$ ]]; then
  loadlib "cmd.$nap_cmd"
  if [ "$help" == y ]; then
    nap_cmd_help
  else
    nap_cmd_run "$@"
  fi
else
  fail "unknown command \`$nap_cmd'"
fi

# --

# vim: set tw=70 sw=2 sts=2 et fdm=marker :
