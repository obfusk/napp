#!/usr/bin/env ruby

unless Gem.loaded_specs.include? 'napp'
  $:.unshift File.expand_path('../../lib', __FILE__)
end

require 'napp/cfg'
require 'napp/cmd'
require 'napp/version'

puts "napp v#{Napp::VERSION}\n\n"

cfg         = Napp::Cfg::All.new nappcfg: Napp::Cfg.nappcfg
cfg.global  = Napp::Cfg.read_global cfg

Napp::Cmd.run cfg, *ARGV
