#!/usr/bin/env ruby

unless Gem.loaded_specs.include? 'napp'
  libs = [File.expand_path('../../lib', __FILE__)]
  deps = File.expand_path('../../deps', __FILE__)
  Dir["#{deps}/*/lib"].each { |lib| libs << lib }
  $:.unshift *libs
end

require 'napp/cfg'
require 'napp/cmd'
require 'napp/util'

Napp::Cmd.run Napp::Cfg.config, *ARGV
